#pragma config(Motor,  port2,           drive,         tmotorVex269_MC29, openLoop)
#pragma config(Motor,  port9,           clawServo,     tmotorServoContinuousRotation, openLoop)
//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//

task motorRotate() // Will move motor clockwise with one button, and counter-clockwise with another button //
{
	while(true)// Program will constantly check for these events //
	{

		int leftTrigger = vexRT[Btn5U];
		int rightTrigger = vexRT[Btn6U];

		if (leftTrigger)// while the boolean variable "leftTrigger" is true, set motor "drive" speed to 127 //
		{
			motor[drive] = 127;
			wait1Msec(5000);
		}
		else
		{
			stopMotor(drive);
		}

		if (rightTrigger)// while the boolean variable "rightTrigger" is true, set motor "drive" speed to -127 //
		{
			motor[drive] = -127;
			wait1Msec(5000);
		}
		else
		{
			stopMotor(drive);
		}

	}
}

task clawClose()
{
	while(true)
	{

		int openOrClosed = 0;
		int claw = vexRT[Btn8R];

		if(claw && openOrClosed % 2 == 0)
		{
			motor[clawServo] = 100;
			openOrClosed++;
		}

		if(claw && openOrClosed % 2 == 1)
		{
			motor[clawServo] = 0;
			openOrClosed++;
		}
	}
}
task main()
{
	while(true)// continuously run all tasks //
	{
		startTask(motorRotate);
		startTask(clawClose);
	}
}
